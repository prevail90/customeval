<div class="mod_customeval-evaluation">
    <h2>{{#str}}evaluating, mod_customeval{{/str}} {{studentname}}</h2>

    <form id="mod_customeval-form">
        <input type="hidden" name="cmid" value="{{cmid}}">
        <input type="hidden" name="userid" value="{{userid}}">

        {{#criteria}}
        <div class="criterion">
            <h4>{{description}}</h4>
            <div class="options">
                {{#options}}
                <label class="option-label">
                    <input type="radio" name="criteria[{{id}}]" value="{{id}}">
                    {{text}}
                </label>
                {{/options}}
            </div>
            <textarea name="comments[{{id}}]" placeholder="{{#str}}comments, mod_customeval{{/str}}"></textarea>
        </div>
        {{/criteria}}

        <button type="submit" class="btn btn-primary">
            {{#str}}saveevaluation, mod_customeval{{/str}}
        </button>
    </form>
</div>
