<div class="option-row row mb-2" id="{{optionid}}">
    <div class="col-md-4">
        <input type="text" class="form-control option-text" placeholder="{{#str}}optiontext, mod_customeval{{/str}}">
    </div>
    <div class="col-md-3">
        <input type="text" class="form-control option-value" placeholder="{{#str}}optionvalue, mod_customeval{{/str}}">
    </div>
    <div class="col-md-3">
        <input type="number" class="form-control option-weight" placeholder="{{#str}}weight, mod_customeval{{/str}}" step="0.1">
    </div>
    <div class="col-md-2">
        <button type="button" class="btn btn-danger delete-option">
            {{#str}}delete, core{{/str}}
        </button>
    </div>
</div>
