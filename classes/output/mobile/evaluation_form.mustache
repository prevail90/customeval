<div class="mod_customeval-form-container">
    <h2>{{#str}}evaluationfor, mod_customeval{{/str}} {{studentname}}</h2>

    <form id="mod_customeval-eval-form">
        {{#sections}}
        <div class="section">
            <h3>{{name}}</h3>
            <p>{{description}}</p>

            {{#criteria}}
            <div class="criterion">
                <h4>{{description}}</h4>
                <div class="options">
                    {{#options}}
                    <label>
                        <input type="radio" name="section_{{sectionid}}[{{id}}]" value="{{id}}">
                        {{text}} ({{value}})
                    </label>
                    {{/options}}
                </div>
                <textarea name="comments_{{sectionid}}[{{id}}]" placeholder="Comments"></textarea>
            </div>
            {{/criteria}}
        </div>
        {{/sections}}

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">{{#str}}saveevaluation, mod_customeval{{/str}}</button>
        </div>
    </form>
</div>
